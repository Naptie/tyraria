{
  "name": "tyraria",
  "version": "0.1.0",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "repository": "https://github.com/ParaN3xus/tyraria.git",
  "author": "paran3xus <paran3xus007@gmail.com>",
  "license": "GPL-3.0-only",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "dist:ghpages": "BUILD_PATH=/tyraria/ vite build && gh-pages -d dist",
    "dist:cfpages": "BUILD_PATH=/ vite build && npx wrangler pages deploy dist"
  },
  "dependencies": {
    "@codingame/monaco-vscode-api": "~20.1.1",
    "@codingame/monaco-vscode-explorer-service-override": "~20.1.1",
    "@codingame/monaco-vscode-keybindings-service-override": "~20.1.1",
    "@codingame/monaco-vscode-markers-service-override": "~20.1.1",
    "@codingame/monaco-vscode-views-service-override": "~20.1.1",
    "@gera2ld/tarjs": "^0.3.1",
    "@myriaddreamin/typst-ts-renderer": "=0.6.1-rc3",
    "@myriaddreamin/typst.ts": "=0.6.1-rc3",
    "@types/pako": "^2.0.4",
    "buffer": "^6.0.3",
    "monaco-editor": "^0.52.2",
    "monaco-editor-wrapper": "^6.11.0",
    "monaco-languageclient": "^9.10.0",
    "pako": "^2.1.0",
    "pathe": "^2.0.3",
    "rxjs": "^7.8.2",
    "splitpanes": "^4.0.4",
    "svelte-split-pane": "^0.1.2",
    "tinymist": "link:tinymist",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@codingame/esbuild-import-meta-url-plugin": "^1.0.3",
    "@eslint/js": "^9.34.0",
    "@iconify-json/heroicons": "^1.2.2",
    "@iconify/svelte": "^4.0.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/eslint": "^9.6.0",
    "@vscode-elements/elements-lite": "^0.4.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^2.35.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.1.9",
    "splitpanes": "^4.0.4",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.0.6",
    "vite-plugin-compression2": "^2.2.0",
    "wrangler": "^4.32.0"
  }
}
